<!-- views/dashboard.ejs (page profil) -->
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Mon profil</title>

  <!-- Bootstrap via CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">MonApp</a>
      <div class="d-flex align-items-center gap-2 ms-auto">
        <a class="btn btn-outline-light" href="/profile">Modifier mon profil</a>
        <a class="btn btn-outline-light" href="/logto/sign-out">Déconnexion</a>
      </div>
    </div>
  </nav>

  <!-- Contenu -->
  <main class="container py-4">
    <h1 class="h4 mb-4">
      Bienvenue, <%= user.prenom %> <%= user.nom %> !
    </h1>

    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="h5 mb-3">Informations du compte</h2>
        <dl class="row mb-0">
          <dt class="col-sm-3">Prénom</dt>
          <dd class="col-sm-9"><%= user.prenom || '—' %></dd>

          <dt class="col-sm-3">Nom</dt>
          <dd class="col-sm-9"><%= user.nom || '—' %></dd>

          <dt class="col-sm-3">Email</dt>
          <dd class="col-sm-9"><%= user.email || '—' %></dd>

          <dt class="col-sm-3">OIDC sub</dt>
          <dd class="col-sm-9"><code><%= user.sub %></code></dd>
        </dl>

        <div class="mt-4 d-flex gap-2">
          <a class="btn btn-primary" href="/profile">Modifier mes informations</a>
          <a class="btn btn-outline-secondary" href="/dashboard">Actualiser</a>
        </div>
      </div>
    </div>
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
